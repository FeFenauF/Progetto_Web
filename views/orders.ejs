<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ordini</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="../../javascripts/logout.js" defer></script>
</head>
<body>
<%-include('navbar')%>
<div class="container">
    <div class="text-center">
        <h1>Ordini</h1>

        <% if (orders.length > 0) { %>
            <div class="row">
                <% orders.forEach(function(order) { %>
                    <div class="col-md-3 my-2 mx-4">
                        <div class="card mb-5">
                            <img src="<%= order.image %>" class="card-image-top" alt="Immagine auto">
                            <div class="card-body">
                                <h5 class="card-title"><%= order.marca %> <%= order.modello %></h5>
                                <p class="card-text"><%= order.prezzo %>â‚¬</p>
                                <p class="card-text"><%= order.cardNumber %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>Nessun ordine.</p>
        <% } %>
    </div>
</div>
</body>
</html>
