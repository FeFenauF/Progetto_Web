<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Showroom</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/user/home">Home</a>
    </div>
</nav>
<div class="container">
    <div class="text-center">
        <h1>Showroom</h1>

        <% if (cars.length > 0) { %>
            <table class="table">
                <thead>
                <tr>
                    <th>Marca</th>
                    <th>Modello</th>
                    <th>Prezzo</th>
                    <th>Foto</th>
                    <th>Azioni</th>
                </tr>
                </thead>
                <tbody>
                <% cars.forEach(function(car) { %>
                    <tr>
                        <td><%= car.marca %></td>
                        <td><%= car.modello %></td>
                        <td><%= car.prezzo %>â‚¬</td>
                        <td>
                            <div class="square-image-container">
                                <img class="square-image" src="<%= car.image %>" alt="Immagine auto">
                            </div>
                        </td>
                        <td>
                            <a href="/cars/favourites/add/<%= car.id %>" class="btn btn-primary">Aggiungi ai Preferiti</a>
                            <a href="/cars/favourites/remove/<%= car.id %>" class="btn btn-danger">Rimuovi dai Preferiti</a>
                        </td>

                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>Nessuna auto disponibile nello showroom.</p>
        <% } %>
    </div>
</div>
</body>
</html>