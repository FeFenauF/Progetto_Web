<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Showroom</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
    <div class="container-fluid">
        <a class="navbar-brand" style="color: #ff6800" href="/user/home">Home</a>
        <form class="form-inline" action="/user">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button type="submit" class="button">Search</button>
        </form>
        <a class="navbar-brand ms-auto" href="/">
            <img src="../images/Logo.png" alt="Immagine" width="200" class="img-fluid">
        </a>
    </div>
</nav>
<div class="container">
    <div class="text-center">
        <h1>Showroom</h1>

        <% if (cars.length > 0) { %>
            <table class="table">
                <thead>
                <tr>
                    <th>Marca</th>
                    <th>Modello</th>
                    <th>Prezzo</th>
                    <th>Foto</th>
                    <th>Azioni</th>
                </tr>
                </thead>
                <tbody>
                <% cars.forEach(function(car) { %>
                    <tr>
                        <td><a href="/cars/details/<%= car.id %>"><%= car.marca %></a></td>
                        <td><a href="/cars/details/<%= car.id %>"><%= car.modello %></a></td>
                        <td><a href="/cars/details/<%= car.id %>"><%= car.prezzo %>â‚¬</a></td>
                        <td>
                            <div class="square-image-container">
                                <a href="/cars/details/<%= car.id %>">
                                    <img class="square-image" src="<%= car.image %>" alt="Immagine auto">
                                </a>
                            </div>
                        </td>
                        <td>
                            <a href="/cars/favourites/add/<%= car.id %>" class="btn btn-primary">Aggiungi ai Preferiti</a>
                            <a href="/cars/favourites/remove/<%= car.id %>" class="btn btn-danger">Rimuovi dai Preferiti</a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>Nessuna auto disponibile nello showroom.</p>
        <% } %>
    </div>
</div>
</body>
</html>