<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrello</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="../../javascripts/logout.js" defer></script>
</head>
<body>
<%-include('navbar')%>
<div class="container">
    <div class="text-center">
        <h1>Carrello</h1>

        <% if (cars.length > 0) { %>
            <div class="row">
                <% cars.forEach(function(car) { %>
                    <div class="col-md-3 my-2 mx-4">
                        <div class="card mb-5" onclick="location.href='<%= car.link %>';">
                            <img src="<%= car.image %>" class="card-image-top" alt="Immagine auto">
                            <div class="card-body">
                                <h5 class="card-title"><%= car.marca %> <%= car.modello %></h5>
                                <p class="card-text"><%= car.prezzo %>â‚¬</p>
                                <a href="/cars/cart/remove/<%= car.id %>" class="btn btn-danger">Rimuovi dal Carrello</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <a href="/cars/checkout" class="btn btn-primary shadow">Checkout</a>
        <% } else { %>
            <p>Nessuna auto nel carrello.</p>
        <% } %>
    </div>
</div>
</body>
</html>
