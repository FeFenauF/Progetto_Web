<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metodi di pagamento</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
    <div class="container-fluid">
        <a class="navbar-brand" style="color: #ff6800" href="/user/home">Home</a>
        <a class="navbar-brand ms-auto" href="/user/home">
            <img src="../images/Logo.png" alt="Immagine" width="200" class="img-fluid">
        </a>
    </div>
</nav>
<div class="container">
    <div class="text-center">
        <h1>Metodi di pagamento</h1>

        <% if (cards.length > 0) { %>
            <div class="row">
                <% cards.forEach(function(card) { %>
                    <div class="col-md-3 my-2 mx-4">
                        <div class="card mb-5">
                            <div class="card-body">
                                <h5 class="card-title"><%= card.nome %> <%= card.cognome %></h5>
                                <p class="card-text"><%= card.cardNumber %></p>
                                <a href="/cards/carte/remove/<%= card.cardid %>" class="btn btn-danger">Rimuovi metodo di pagamento</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>Nessuna metodo di pagamento inserito.</p>
        <% } %>
        <a href="/user/carteform" class="btn btn-primary">Aggiungi metodo di pagamento</a>
    </div>
</div>
</body>
</html>
