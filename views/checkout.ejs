<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="../../javascripts/logout.js" defer></script>
</head>
<body>
<%-include('navbar')%>
<div class="container">
    <div class="text-center">
        <h1>Checkout</h1>
        <form action="/cars/checkout" method="post">
            <label for="selectedCard">Seleziona il metodo di pagamento:</label>
            <select name="card" id="card">
                <% cards.forEach(function(card) { %>
                    <option value="<%= card.cardNumber %>"><%= card.cardNumber %></option>
                <% }); %>
            </select>
            <button type="submit" class="btn btn-warning">Procedi con il checkout</button>
        </form>
    </div>
</div>
</body>
</html>
